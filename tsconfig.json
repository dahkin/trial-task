{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2017",
      "dom.iterable"
    ],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["Components/*"],
      "@features/*": ["features/*"],
    },
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
